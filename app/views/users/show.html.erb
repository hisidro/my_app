<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section>
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="span8">
    <%= render 'follow_form' if signed_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>

  <div class="span6 offset3">
    <% if @user.profile_images.any? %>
      <% @user.profile_images.each do |profile_image| %>
        <p><b><i><%= profile_image.name %></i></b></p>
          <%= image_tag preview_or_default_image(profile_image) if profile_image.image? %>
          <% if current_user?(profile_image.user) %>
            <%= link_to "delete", profile_image, method: :delete,
                                     confirm: "Are You sure you want to delete this image?" %>
          <% end %>
        <br>
      <% end %>
    <% end %>
  </div>
</div>